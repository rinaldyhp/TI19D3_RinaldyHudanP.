<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">


    <ImageView
        android:id="@+id/logosplash"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtaplicationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tokoh Pahlawan Republic Indonesia V.0.1"
        android:layout_below="@id/logosplash"
        android:layout_centerInParent="true"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/progeessBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtaplicationname"/>


</RelativeLayout>